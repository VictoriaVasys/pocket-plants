
<div class="big-center">
  <h1>Pocket Plants</h1>
  <%= image_tag("camera.png", class: 'home-camera-icon') %>
  <h3>Click the camera to take a photo of plant!</h3>
</div>

<div class="low-center">

  <% if !current_user %>
  <form class='form-inline'>
    <%= form_for @user, url: sessions_path do |f| %>
      <div class="form-group">
        <%#= f.label :username %>
        <%= f.email_field :email, placeholder: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%#= f.label :password %>
        <%= f.password_field :password, placeholder: "password", class: "form-control" %>
      </div><br><br>
      <%= f.submit 'Log in', class: "btn btn-default login-button" %>
    <% end %><br>
  </form>
      
    <h5> Wanna save & fave photos? <%= link_to "Sign up here!", sign_up_path %></h5>
  <% end %>

</div>